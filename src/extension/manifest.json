{
  "manifest_version": 3,
  "name": "Facebook Marketplace Order Detector",
  "version": "1.0",
  "description": "Detects Facebook Marketplace purchase confirmations and sends order data to the Order Confirmation Agent.",
  "permissions": [
    "tabs",
    "scripting",
    "storage"
  ],
  "options_page": "options.html",
  "host_permissions": [
    "https://www.facebook.com/marketplace/checkout/done/*",
    "https://www.facebook.com/marketplace/orders/*/receipt/*",
    "http://localhost:8000/*",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/marketplace/checkout/done/*",
        "https://www.facebook.com/marketplace/orders/*/receipt/*",
        "http://localhost:8080/*",
        "*/checkout/order-received/*"
      ],
      "js": ["content_script.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [ "assets/icon.jpg" ],
      "matches": [ "<all_urls>" ]
    }
  ]
}